<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserLogin">

    <ImageView
        android:id="@+id/img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/go"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="10dp"
        android:background="@drawable/search_view"
        app:cardCornerRadius="22dp"
        app:cardElevation="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:fontFamily="serif"
                android:text="Contact Us"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scl_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shivaji nagar , pune"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="40dp"
                android:textSize="18dp"
                android:textStyle="normal"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="10dp"
                android:background="#8A8585"/>
            <TextView
                android:id="@+id/scl_pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pincode :- 223444"
                android:drawableLeft="@drawable/ic_baseline_pin_drop_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="normal"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="10dp"
                android:background="#8A8585"/>
            <TextView
                android:id="@+id/scl_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_mail_24"
                android:drawablePadding="10dp"
                android:text="sample@gmail.com"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="normal"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="10dp"
                android:background="#8A8585"/>
            <TextView
                android:id="@+id/PhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:drawablePadding="10dp"
                android:text="92827777777"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="normal"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="10dp"
                android:background="#8A8585"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>