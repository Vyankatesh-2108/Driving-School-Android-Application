    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="52dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">


        <!--        app:layout_constraintTop_toTopOf="@+id/imageView2"-->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sclprofile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/b"
            app:layout_constraintStart_toStartOf="parent"

            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="132dp" />

        <TextView
            android:id="@+id/sclname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AHEN Driving"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/search_view"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="100dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scl_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Address :- shivaji nagar , pune"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="40dp"
                android:textSize="18dp"
                android:textStyle="normal"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="10dp"
                android:background="#8A8585"/>
            <TextView
                android:id="@+id/scl_pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pincode :- 223444"
                android:drawableLeft="@drawable/ic_baseline_pin_drop_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="normal"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="10dp"
                android:background="#8A8585"/>
            <TextView
                android:id="@+id/scl_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_mail_24"
                android:drawablePadding="10dp"
                android:text="Mail :- sample@gmail.com"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="normal"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="10dp"
                android:background="#8A8585"/>
            <TextView
                android:id="@+id/PhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:drawablePadding="10dp"
                android:text="92827777777"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="normal"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="10dp"
                android:background="#8A8585"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facilities"
                android:drawableLeft="@drawable/ic_baseline_rate_review_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="normal"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="10dp"
                android:background="#8A8585"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cars Available :- "
                android:drawableLeft="@drawable/ic_baseline_event_available_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bens : 2700"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:textStyle="normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bens : 33500"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:textStyle="normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bens : 9800"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:textStyle="normal"
                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/previous"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="PREVIOUS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginEnd="32dp"
        android:text="NEXT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.52"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>